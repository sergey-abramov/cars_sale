<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://127.0.0.1:5432/cars_sale_db</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">password</property>
        <property name="hibernate.connection.pool_size">1</property>
        <property name="hibernate.current_session_context_class">thread</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="server.error.whitelabel.enabled">false</property>

        <mapping class="domain.carsale.com.User" />
        <mapping class="domain.carsale.com.Post" />
        <mapping class="car.domain.carsale.com.Car" />
        <mapping class="car.domain.carsale.com.Brand" />
        <mapping class="car.domain.carsale.com.Owner" />
        <mapping class="car.domain.carsale.com.CarDocs" />
        <mapping class="car.domain.carsale.com.TypeCar" />
        <mapping class="car.domain.carsale.com.TypeCarBody" />
        <mapping class="car.domain.carsale.com.TypeEngine" />
    </session-factory>
</hibernate-configuration>